@model AMS.Models.tblLogin
@{
    ViewBag.Title = "Login";
<link href="~/Styles/LoginStyle.css" rel="stylesheet" />

}

@using (Html.BeginForm())
{
    <table class="table" align="center" cellspacing="20">
        <caption>ADMIN LOGIN</caption>
        <tr>
            <td class="login-td">
                UserName
            </td>
            <td>
                @Html.TextBoxFor(a => a.UserID,"",new { @class="TextBoxFor"})
            </td>
            <td>@Html.ValidationMessageFor(a => a.UserID, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td class="login-td">
                Password
            </td>
            <td>
                @Html.PasswordFor(a => a.Password)
            </td>
            <td>@Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })</td>
        </tr>
        <tr>
            <td colspan="2" class = "text-danger">
                @ViewBag.Msg
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Login" />
            </td>
        </tr>
    </table>
}
